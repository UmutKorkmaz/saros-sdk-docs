# Saros DLMM Impermanent Loss Calculator Configuration

# =============================================================================
# Solana RPC Configuration
# =============================================================================
RPC_URL=https://api.mainnet-beta.solana.com
COMMITMENT_LEVEL=confirmed
REQUEST_TIMEOUT_SECS=30

# Alternative RPC endpoints (uncomment to use)
# RPC_URL=https://solana-api.projectserum.com
# RPC_URL=https://api.mainnet-beta.solana.com

# =============================================================================
# Price Data API Configuration
# =============================================================================

# CoinGecko API (recommended for price data)
COINGECKO_API_URL=https://api.coingecko.com/api/v3
COINGECKO_API_KEY=your_coingecko_api_key_here
COINGECKO_REQUESTS_PER_MINUTE=100

# Pyth Network Price Feeds
PYTH_ENDPOINT=https://pyth.network/api
PYTH_CLUSTER=mainnet-beta

# Alternative price sources
# CHAINLINK_ENDPOINT=https://chainlink-feeds.com
# JUPITER_API=https://quote-api.jup.ag/v6

# =============================================================================
# Caching Configuration  
# =============================================================================

# Price cache TTL in seconds
PRICE_CACHE_TTL=30

# Historical data cache TTL in seconds
HISTORICAL_CACHE_TTL=3600

# Position data cache TTL in seconds
POSITION_CACHE_TTL=60

# Maximum historical data points to keep in memory
MAX_HISTORICAL_POINTS=10000

# =============================================================================
# Analysis Configuration
# =============================================================================

# Default analysis interval for real-time monitoring (seconds)
DEFAULT_MONITORING_INTERVAL=60

# Maximum price deviation threshold for alerts (percentage)
MAX_PRICE_DEVIATION=0.05

# Minimum fee threshold for break-even analysis (USD)
MIN_FEE_THRESHOLD=1.00

# Historical analysis default period (days)
DEFAULT_HISTORICAL_DAYS=30

# Volatility calculation window (hours)  
VOLATILITY_WINDOW_HOURS=24

# =============================================================================
# Notification Configuration
# =============================================================================

# Enable notifications (true/false)
ENABLE_NOTIFICATIONS=true

# Webhook URL for notifications
NOTIFICATION_WEBHOOK=https://your-webhook-service.com/alerts

# Notification thresholds
HIGH_IL_THRESHOLD=0.05      # 5% IL threshold for alerts
CRITICAL_IL_THRESHOLD=0.10  # 10% IL threshold for critical alerts  
VOLATILITY_SPIKE_THRESHOLD=0.20  # 20% volatility spike threshold

# Discord webhook (optional)
# DISCORD_WEBHOOK=https://discord.com/api/webhooks/your-webhook

# Slack webhook (optional)
# SLACK_WEBHOOK=https://hooks.slack.com/services/your-webhook

# =============================================================================
# Report Configuration
# =============================================================================

# Default output directory for reports
REPORTS_OUTPUT_DIR=./reports

# Default report format (json, csv, html, all)
DEFAULT_REPORT_FORMAT=json

# Include raw data in reports (true/false)
INCLUDE_RAW_DATA=false

# Include charts in HTML reports (true/false)
INCLUDE_CHARTS=true

# Report file naming pattern
REPORT_FILE_PATTERN=%Y%m%d_%H%M%S

# =============================================================================
# Performance Configuration
# =============================================================================

# Number of concurrent price fetch requests
CONCURRENT_PRICE_REQUESTS=5

# HTTP client timeout (seconds)
HTTP_CLIENT_TIMEOUT=10

# Retry configuration
MAX_RETRIES=3
RETRY_DELAY_MS=1000

# Database connection pool (if using database)
# DATABASE_MAX_CONNECTIONS=10
# DATABASE_MIN_CONNECTIONS=1

# =============================================================================
# Logging Configuration  
# =============================================================================

# Log level (error, warn, info, debug, trace)
RUST_LOG=info

# Log format (compact, pretty, json)
LOG_FORMAT=compact

# Enable file logging (true/false)
LOG_TO_FILE=true

# Log file path
LOG_FILE_PATH=./logs/il_calculator.log

# Maximum log file size (MB)
MAX_LOG_FILE_SIZE=100

# Number of log files to retain
LOG_FILE_RETENTION=5

# =============================================================================
# Security Configuration
# =============================================================================

# Rate limiting
MAX_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_WINDOW_SECS=60

# API key validation
VALIDATE_API_KEYS=true

# Enable request signing (if required by RPC)
ENABLE_REQUEST_SIGNING=false

# =============================================================================
# Development Configuration
# =============================================================================

# Enable debug mode (additional logging and validation)
DEBUG_MODE=false

# Mock data mode (use simulated data instead of live APIs)
MOCK_DATA_MODE=false

# Skip external API calls (use cached/mock data only)
OFFLINE_MODE=false

# Enable performance metrics collection
ENABLE_METRICS=true

# Metrics export endpoint
# METRICS_ENDPOINT=http://localhost:9090/metrics

