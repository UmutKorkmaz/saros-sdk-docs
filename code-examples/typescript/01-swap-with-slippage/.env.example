# Solana Network Configuration
SOLANA_NETWORK=devnet
# Options: devnet, mainnet-beta, testnet

# RPC Endpoints
SOLANA_RPC_URL=https://api.devnet.solana.com
# For better performance, use a dedicated RPC provider:
# HELIUS_RPC_URL=https://rpc.helius.xyz/?api-key=YOUR_API_KEY
# QUICKNODE_RPC_URL=https://YOUR_QUICKNODE_ENDPOINT
# ALCHEMY_RPC_URL=https://solana-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Wallet Configuration
WALLET_PRIVATE_KEY=YOUR_BASE58_PRIVATE_KEY_HERE
# Generate a new wallet: solana-keygen new
# Export existing wallet: solana-keygen show --output json

# Swap Configuration
DEFAULT_SLIPPAGE=0.5
# Default slippage tolerance in percentage (0.5 = 0.5%)

MAX_SLIPPAGE=5.0
# Maximum allowed slippage in percentage

PRICE_IMPACT_WARNING=2.0
# Show warning when price impact exceeds this percentage

# Transaction Configuration
MAX_RETRIES=3
# Maximum number of retry attempts for failed transactions

RETRY_DELAY_MS=1000
# Initial delay between retries (uses exponential backoff)

CONFIRMATION_TIMEOUT_MS=60000
# Maximum time to wait for transaction confirmation

PRIORITY_FEE_LAMPORTS=10000
# Priority fee in lamports (1 SOL = 1,000,000,000 lamports)

# MEV Protection
USE_JITO_BUNDLE=false
# Use Jito bundles for MEV protection (mainnet only)

JITO_TIP_AMOUNT=0.001
# Jito tip amount in SOL

# Monitoring Configuration
ENABLE_PRICE_MONITORING=true
# Enable real-time price monitoring

PRICE_CHECK_INTERVAL_MS=5000
# How often to check prices (in milliseconds)

ENABLE_WEBSOCKET=false
# Use WebSocket for real-time price feeds

# Logging Configuration
LOG_LEVEL=info
# Options: error, warn, info, debug, trace

LOG_TO_FILE=true
# Save logs to file

LOG_MAX_SIZE=5242880
# Maximum log file size in bytes (5MB)

LOG_MAX_FILES=5
# Maximum number of log files to keep

# Analytics (Optional)
ENABLE_ANALYTICS=false
# Send anonymous usage statistics

ANALYTICS_ENDPOINT=
# Analytics server endpoint

# Advanced Configuration
SIMULATE_BEFORE_SEND=true
# Always simulate transactions before sending

USE_VERSIONED_TRANSACTIONS=true
# Use versioned transactions for better performance

COMPUTE_UNIT_LIMIT=200000
# Maximum compute units per transaction

# Pool Configuration
PREFERRED_POOL_TYPE=DLMM
# Options: AMM, DLMM, STABLE

MIN_POOL_LIQUIDITY=10000
# Minimum pool liquidity in USD

# Security
ENABLE_RATE_LIMITING=true
# Enable rate limiting for RPC calls

MAX_REQUESTS_PER_MINUTE=60
# Maximum RPC requests per minute

# Development
NODE_ENV=development
# Options: development, production, test

DEBUG=false
# Enable debug mode