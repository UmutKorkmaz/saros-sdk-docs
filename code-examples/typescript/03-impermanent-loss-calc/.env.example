# Solana Network Configuration
SOLANA_NETWORK=mainnet-beta
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Price Data Configuration
PRICE_API_URL=https://api.coingecko.com/api/v3
PRICE_UPDATE_INTERVAL=60000  # Update prices every minute
PRICE_CACHE_DURATION=300000  # Cache prices for 5 minutes

# IL Monitoring Configuration
ENABLE_MONITORING=true
MONITOR_CHECK_INTERVAL=60000  # Check IL every minute
IL_WARNING_THRESHOLD=5        # Warn when IL exceeds 5%
IL_CRITICAL_THRESHOLD=10      # Critical alert at 10% IL
MAX_LOSS_USD=500             # Alert if loss exceeds $500

# Alert Configuration
ENABLE_ALERTS=true
WEBHOOK_URL=
DISCORD_WEBHOOK=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Reporting Configuration
GENERATE_REPORTS=true
REPORT_INTERVAL=86400000     # Generate daily reports
REPORT_FORMAT=html           # Options: json, html, csv
REPORT_OUTPUT_DIR=./reports
INCLUDE_CHARTS=true

# Position Tracking
TRACK_POSITIONS=true
POSITION_UPDATE_INTERVAL=300000  # Update positions every 5 minutes

# Historical Data
FETCH_HISTORICAL=true
HISTORICAL_DAYS=30           # Fetch 30 days of historical data
HISTORICAL_RESOLUTION=1d     # Options: 1h, 4h, 1d, 1w

# Pool Configuration
DEFAULT_POOL_TYPE=AMM        # Options: AMM, DLMM, STABLE
DEFAULT_FEE_TIER=0.3        # Default fee tier in percentage

# DLMM Specific
DLMM_BIN_STEP=10           # Default bin step for DLMM
DLMM_ACTIVE_BIN=100        # Default active bin ID

# Calculation Settings
DECIMAL_PRECISION=20        # Decimal.js precision
ROUNDING_MODE=4            # Decimal.js rounding mode

# Optimization Settings
OPTIMIZE_RANGE=true         # Auto-optimize DLMM ranges
TARGET_APR=50              # Target APR for optimization
MAX_ACCEPTABLE_IL=10       # Maximum acceptable IL percentage
REBALANCE_THRESHOLD=15     # Rebalance when IL exceeds this

# Fee Analysis
ANALYZE_FEES=true
FEE_COMPENSATION_PERIOD=30  # Days to calculate fee compensation
INCLUDE_GAS_COSTS=true     # Include gas in profitability calc

# Risk Management
RISK_TOLERANCE=medium      # Options: low, medium, high
DIVERSIFICATION_FACTOR=3   # Number of pools to diversify across
HEDGE_POSITIONS=false      # Enable hedging recommendations

# Performance Tracking
TRACK_PERFORMANCE=true
PERFORMANCE_LOG_INTERVAL=3600000  # Log performance hourly

# Simulation Settings
ENABLE_SIMULATION=true
SIMULATION_SCENARIOS=100   # Number of scenarios to simulate
SIMULATION_TIME_HORIZON=90 # Days to simulate

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL=300000          # Cache time-to-live (5 minutes)
MAX_CACHE_SIZE=100        # Maximum cache entries

# API Rate Limiting
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=info            # Options: error, warn, info, debug
LOG_TO_FILE=true
LOG_MAX_SIZE=5242880     # 5MB
LOG_MAX_FILES=5

# Development/Testing
NODE_ENV=development
USE_MOCK_DATA=false
MOCK_PRICE_VOLATILITY=30  # Simulated volatility percentage

# Advanced Features
ENABLE_MACHINE_LEARNING=false  # Use ML for IL prediction
ML_MODEL_PATH=./models/il-predictor.json
ENABLE_BACKTESTING=true        # Enable strategy backtesting
BACKTEST_START_DATE=2024-01-01
BACKTEST_END_DATE=2024-12-31